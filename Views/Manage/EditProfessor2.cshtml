@model LuccasCorpVX.Models.IndexProfessorViewModel
@*@{
    ViewBag.Title = "Editar Professor";
}*@

<form method="post" enctype="multipart/form-data" asp-action="AtualizarProfessor" asp-controller="Manage">
    @Html.HiddenFor(model => model.Id)  <!-- Adicionando o campo Id como oculto -->

    <div class="col-md-6">
        <div class="form-group">
            <label for="departamento">Departamento:</label>
            <input type="text" id="departamento" name="Departamento" value="@Model.Departamento" class="form-control" />
        </div>

        <div class="form-group">
            <label for="foto">Foto:</label>
            <input type="file" id="foto" name="Foto" class="form-control" />
        </div>

        <button type="submit" class="btn btn-outline-dark rounded-pill shadow-sm">Salvar Alterações</button>
    </div>
</form>